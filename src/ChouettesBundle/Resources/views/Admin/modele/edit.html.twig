{% extends 'base.html.twig' %}

{% block body %}
    {{ tinymce_init({'theme': {'simple': {'menubar': false}}}) }}


    <div class="container admin">
        <h1>Modifier un modèle</h1>

    {{ form_start(edit_form) }}

        <div class="row">
            <div class="col l6 m6 s12">
                <div class="row input-field">
                    {{ form_label(edit_form.titre) }}
                    {{ form_widget(edit_form.titre) }}
                    {{ form_errors(edit_form.titre) }}
                </div>
            </div>
            <div class="col l6 m6 s12">
                <label>Catégorie :</label>
                {{ form_widget(edit_form.categorie) }}
                {{ form_errors(edit_form.categorie) }}
            </div>
        </div>


        <div class="row textarea tinymce">
            {{ form_label(edit_form.contenu) }}
            {{ form_widget(edit_form.contenu) }}
            {{ form_errors(edit_form.contenu) }}
        </div>

        {#<div class="row textarea">#}
            {#{{ form_label(edit_form.lien) }}#}
            {#{{ form_widget(edit_form.lien) }}#}
            {#{{ form_errors(edit_form.lien) }}#}
        {#</div>#}




        <div class="row">
            <div class="col l4 m4 s12 center">
                <img class="responsive-img thumbs" src="{{ modele.image.url | imagine_filter('my_thumb') }}" alt="{{ modele.image.alt }}">
            </div>

            <div class="col l8 m8 s12">
                <div class="row file-field input-field">
                    <div class="btn">
                        <span>Changer l'image</span>
                        {{ form_widget(edit_form.image.file) }}
                    </div>
                    <div class="file-path-wrapper">
                        <input class="file-path validate" type="text" placeholder="Cliquez pour modifier votre image.">
                    </div>
                    {{ form_errors(edit_form.image.file) }}
                </div>

                <div class="row input-field">
                    {{ form_label(edit_form.image.alt) }}
                    {{ form_widget(edit_form.image.alt) }}
                    {{ form_errors(edit_form.image.alt) }}
                </div>

                <div class="row input-field">
                    {{ form_widget(edit_form.add_block) }}
                    <label for="modele_add_block">Ajouter à l'accueil</label>
                    {{ form_errors(edit_form.add_block) }}
                </div>
            </div>
        </div>
        
        {{ form_widget(edit_form) }}

        <div class="boutons">
            <button type="submit" title="Valider"><i class="material-icons contactme">check</i></button>
            <a href="{{ path('modele_delete', { 'id': modele.id }) }}" title="Effacer"><i class="material-icons contactme">delete</i> </a>
            <a href="{{ path('modele_index') }}" title="Revenir à l'accueil"><i class="material-icons contactme">arrow_back</i></a>
            <a href="{{ path('admin_homepage') }}" title="Retourner à l'accueil de l'administration"><i class="material-icons contactme">dashboard</i></a>
        </div>
        {{ form_end(edit_form) }}
    </div>
{% endblock %}
